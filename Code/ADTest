Get-ADUser -Filter {UserPrincipalName -eq "user@domain.com"} `
  -Server yourdcname `
  -Credential (Get-Credential) `
  -Properties UserPrincipalName,sAMAccountName


ldapsearch -H ldaps://ldaps.whatever:636 -D "CN=svcbindaccount,OU=ServiceAccounts,DC=companyoc,DC=local" -w 'yourpassword' -b "DC=companyoc,DC=local" "(sAMAccountName=testuser)"
